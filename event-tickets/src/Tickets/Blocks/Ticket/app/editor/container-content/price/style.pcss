.tribe-editor__ticket__content-row.tribe-editor__ticket__content-row--price {
	margin-bottom: 20px;
	display: block;
}

.tribe-editor__ticket__price-label {
	flex: none;
	width: 140px;

	&:after {
		color: var(--tec-color-icon-error);
		content: "*";
		margin-left: var(--tec-spacer-0);
	}
}

.tribe-editor__input.tribe-editor__ticket__price-input {
	width: 120px;
}

.tribe-editor__ticket__price-wrapper {
	display: flex;
}